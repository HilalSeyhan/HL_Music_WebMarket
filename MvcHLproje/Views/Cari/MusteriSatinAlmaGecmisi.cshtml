@using MvcHLproje.Models.Siniflar
@model List<SatisHareket>


@{
    ViewBag.Title = "MusteriSatinAlmaGecmisi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h3>Satın Alma Geçmişi</h3>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Cari Adı : @ViewBag.cari</li>
</ol>

<table class="table table-condensed">
    <tr>
        <th>Satış Id</th>
        <th>Ürün</th>
        <th>Personel</th>
        <th>Birim Fiyat</th>
        <th>Adet</th>
        <th>Toplam Fiyat</th>
        <th>Tarih</th>
        <th>Yazdır</th><!--şimdilik işlevsiz-->
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.SatisId</td>
            <td>@x.Urun.UrunAd</td>
            <td>@x.Personel.PersonelAd  @x.Personel.PersonelSoyad</td>
            <td>@x.Fiyat</td>
            <td>@x.Adet</td>
            <td>@x.ToplamTutar</td>
            <td>@Convert.ToDateTime(x.Tarih).ToString("dd/MM/yyyy")</td>
            <td><a href="#" class="btn btn-outline-dark">Yazdır</a></td>
        </tr>
    }
</table>