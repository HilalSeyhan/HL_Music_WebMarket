
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>HL Müzik Dünyası</title>
    <!-- Bootstrap core CSS -->
    <link href="~/webpanel/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="~/webpanel/css/simple-sidebar.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css" integrity="sha384-vSIIfh2YWi9wW0r9iZe7RJPrKwp6bG+s9QZMoITbCckVJqGCCRhc+ccxNcdpHuYu" crossorigin="anonymous">
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <br />
            <img src="~/images/logo.png" height="60" class="d-block mx-auto" />
            <div class="sidebar-heading" style="text-align:center;">✦ Müşteri Paneli ✦</div>
            <div class="list-group list-group-flush">

                <a href="/CariPanel/Index/" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-user-shield"></i>
                     Profilim
                </a>

                <a href="/CariPanel/Siparislerim/" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-cart-arrow-down"></i>
                     Siparişlerim
                </a>

                <a href="/CariPanel/KargoTakip/" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-dolly"></i>
                     Kargo Takibi
                </a>

                <a href="#" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-envelope-open-text"></i>
                     Mesajlar
                </a>

                <a href="/CariPanel/LogOut/" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-plane"></i>
                     Çıkış Yap
                </a>

            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-primary" id="menu-toggle"> ↫ Ana Menü</button>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="/CariPanel/Index/">
                                <i class="fas fa-user-shield"></i>  Profilim <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/CariPanel/KargoTakip/"><i class="fas fa-dolly"></i>  Kargom Nerede?</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Menü
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-envelope-open-text"></i>
                                     Mesajlar
                                </a>
                                <a class="dropdown-item" href="#">
                                    <i class="fab fa-empire"></i>
                                     Yardım
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/CariPanel/LogOut/">
                                    <i class="fas fa-plane"></i>
                                     Çıkış Yap
                                </a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
            <div class="container-fluid">

                @RenderBody()

            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- Bootstrap core JavaScript -->
    <script src="~/webpanel/vendor/jquery/jquery.min.js"></script>
    <script src="~/webpanel/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });</script>
</body>
</html>
