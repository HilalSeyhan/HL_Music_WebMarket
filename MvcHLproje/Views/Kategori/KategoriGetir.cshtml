@model MvcHLproje.Models.Siniflar.Kategori

@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h3>Kategori Güncelleme Sayfası</h3>
<br />

@using (Html.BeginForm("KategoriGuncelle", "Kategori", FormMethod.Post))//sayfa yüklendikten sonra ben bir post işlemi gerçekleştirdiğimde hangi ActionResualt çalışacak
{
    <div class="form-group">
        @Html.LabelFor(x => x.KategoriAd)
        @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control" })
        @Html.HiddenFor(x => x.KategoriId)<!--Id'yi gizli olarak tuttum(visible'ı false olmuş değer olarak.)-->
    </div>

    <button class="btn btn-outline-warning">Kaydet</button>

}
<br /><br />